# ============================================
# Go-WhatsApp Web MultiDevice - Zeabur Config
# ============================================
# This is a sample .env file optimized for Zeabur deployment
# Copy this to src/.env and customize as needed

# ============================================
# Server Configuration
# ============================================
APP_HOST=0.0.0.0
APP_PORT=3000
APP_DEBUG=true
APP_BASE_PATH=

# ============================================
# CRITICAL FOR ZEABUR: Reverse Proxy Config
# ============================================
# This tells Fiber to trust headers from the reverse proxy
# Zeabur's reverse proxy will send X-Forwarded-* headers
APP_TRUSTED_PROXIES=0.0.0.0/0

# ============================================
# Authentication (Optional)
# ============================================
# Format: username:password
# Multiple credentials separated by comma
# Example: APP_BASIC_AUTH_CREDENTIAL=admin:password123,user:secret456
# Leave empty to disable authentication
# APP_BASIC_AUTH_CREDENTIAL=

# ============================================
# WhatsApp Settings
# ============================================
WHATSAPP_LOG_LEVEL=ERROR
WHATSAPP_AUTO_REPLY_MESSAGE=
WHATSAPP_AUTO_MARK_READ=true
WHATSAPP_AUTO_DOWNLOAD_MEDIA=true
WHATSAPP_AUTO_REJECT_CALL=false
WHATSAPP_ACCOUNT_VALIDATION=true
WHATSAPP_PRESENCE_ON_CONNECT=unavailable

# Max file sizes
WHATSAPP_SETTING_MAX_IMAGE_SIZE=20000000
WHATSAPP_SETTING_MAX_FILE_SIZE=50000000
WHATSAPP_SETTING_MAX_VIDEO_SIZE=100000000
WHATSAPP_SETTING_MAX_DOWNLOAD_SIZE=500000000

# ============================================
# Database Configuration
# ============================================
# SQLite is recommended for single-instance deployments
DB_URI=file:storages/whatsapp.db?_foreign_keys=on
CHAT_STORAGE_URI=file:storages/chatstorage.db
CHAT_STORAGE_ENABLE_FOREIGN_KEYS=true
CHAT_STORAGE_ENABLE_WAL=true

# ============================================
# Webhook Configuration (Optional)
# ============================================
# WHATSAPP_WEBHOOK=http://your-webhook-url
# WHATSAPP_WEBHOOK_SECRET=your-webhook-secret
# WHATSAPP_WEBHOOK_INSECURE_SKIP_VERIFY=false

# ============================================
# Chatwoot Integration (Optional)
# ============================================
# CHATWOOT_ENABLED=false
# CHATWOOT_URL=https://your-chatwoot-instance.com
# CHATWOOT_API_TOKEN=your-api-token
# CHATWOOT_ACCOUNT_ID=1
# CHATWOOT_INBOX_ID=1
# CHATWOOT_DEVICE_ID=device-id

# Import message history to Chatwoot
# CHATWOOT_IMPORT_MESSAGES=false
# CHATWOOT_DAYS_LIMIT_IMPORT_MESSAGES=3

# ============================================
# MCP (Model Context Protocol) Settings
# ============================================
# MCP_HOST=localhost
# MCP_PORT=8080
